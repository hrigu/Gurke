<% title @bed.name %>
<p>
  <b>Name:</b>
  <%= @bed.name%>
</p>
<p>
  <b>Status:</b>
  <%= @bed.field_state%>
</p>

<p>
  <b>Gewählte Pflanzen:</b>
  <% @bed.plants.each do |plant| %>
    <%= plant.name %>
  <%  end %>
</p>

<%= link_to 'Edit', edit_bed_path(@bed, :garden => @garden) %> |
<%= link_to 'Destroy', bed_path(@bed, :garden => @garden), :confirm => 'Are you sure?', :method => :delete %> |
<%= link_to 'zurück zum Garten', @garden %>
