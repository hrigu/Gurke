<h1>Garten</h1>



<% @beds.each do |bed| %>

  <div class="draggable resizable" id="bed_box.<%= to_html_tag bed.name %>">
    <p><%= link_to bed.name, bed %> - <%= bed.field_state %></p>
    <p>Pflanzen: </p>
    <ul>
      <% bed.plants.each do |plant| %>
        <li> <%= link_to plant, plant%> </li>
      <%end%>
    </ul>
    <%= link_to "Beetli bepflanzen", edit_bed_path(bed) %>
  </div>
<% end %>

